{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug (Launch)-App<TP2>",
            "request": "launch",
            "mainClass": "app.App",
            "projectName": "TP1"
        },
        {
            "name": "Debug current grammar",
            "type": "antlr-debug",
            "request": "launch",
            // Archivo a parsear
            "input": "src/app/input.txt",
            // Simbolo inicial
            "startRule": "prog",
            // Muestra Arbol Sintactico
            "printParseTree": true,
            "visualParseTree": true
            }
    ]
}